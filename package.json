  "description":
    "This repo contains my react implementation of [bulma.io](bulma.io) written in Typescript.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged",
    "tslint:fix": "tslint --project ./tsconfig.json --fix"
  },
  "lint-staged": {
    "[*.js, !common/lib/**/*.js]": [
      "eslint --fix",
      "prettier --write",
      "git add"
