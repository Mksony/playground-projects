    "[*.ts, *.tsx, !common/lib/**/*.d.ts]": [
      "npm run tslint:fix",
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mksony/playground-projects.git"
  },
  "keywords": [],
